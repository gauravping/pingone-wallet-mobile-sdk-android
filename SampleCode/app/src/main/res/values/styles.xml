<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_rounded_rect</item>
        <item name="backgroundTint">@color/app_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_bordered">
        <item name="android:background">@drawable/shape_border_black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/gray_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edit_bordered">
        <item name="android:background">@drawable/shape_border_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>